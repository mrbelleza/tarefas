<html>
	
	<head>
		<title>Lista de Contatos</title>
		<link rel="stylesheet" href="https://bootswatch.com/superhero/bootstrap.min.css">
		<style>
			.remover:checked+span {
				color: orangered;
			}
			.lista-tarefas {
				list-style: none;
			}
		</style>
	</head>
	
	<body>
		<nav class="navbar navbar-inverse">
			<div class="container">
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
					 aria-controls="navbar">
						  <span class="sr-only">Toggle navigation</span>
						  <span class="icon-bar"></span>
						  <span class="icon-bar"></span>
						  <span class="icon-bar"></span>
						</button>
					<a class="navbar-brand" href="#">Lista de Contatos</a>
				</div>
				<div id="navbar" class="collapse navbar-collapse">
					<ul class="nav navbar-nav">
	
					</ul>
				</div>
				<!--/.nav-collapse -->
			</div>
		</nav>
	
		<div class="container">
			
			<%= titulo %>
			<br><br>
			<form method="post" action="/tarefa/adicionar">
				<label>Nome</label><br>
				<input type="text" name="nome" placeholder="Nome">
			</form>
			
				<label>Telefone</label><br>
				<input type="text" name="telefone" placeholder="Telefone">
			</form>
			<br><br>
				<label>E-mail</label><br>
				<input type="text" name="email" placeholder="E-mail">
			</form>
			<br><br>
				<input type="submit" value="Adicionar">			
			<br><br>
				
	
				<form method="post" action="/tarefa/remover">
					<ul class="lista-tarefas">
						<% tarefas.forEach(function(tarefa){ %>
							<li>
								<label>
					<input type="checkbox" name="tarefas"
						   class="remover" 
						   value="<%= tarefa %>">
						   <span><%= tarefa %></span>
				</label>
							</li>
							<% }) %>
					</ul>
					<input type="submit" value="Remover">
				</form>
	
				<div class="well">
					<h3>Contato</h3>
					Nome:<%= contato.nome %><br> 
					Telefone:<%= contato.telefone %><br> 
					E-mail:<%= contato.email %><br>
				</div>
	
				<div class="well">
					<h3>Editar Contato</h3>
					<form method="post" action="/contato/editar">
						<label>Nome</label><br>
						<input type="text" name="nome" placeholder="Nome">
						<br><br>
						<label>Telefone</label><br>
						<input type="text" name="telefone" placeholder="Telefone">
						<br><br>
						<label>E-mail</label><br>
						<input type="text" name="email" placeholder="Email">
						<br><br>
						<input type="submit" value="Editar">
					</form>
				</div>
		</div>
	</body>
	
</html>